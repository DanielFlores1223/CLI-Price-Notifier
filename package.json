{
    "name": "cli-price-notifier",
    "version": "1.0.0",
    "description": "CLI PriceNotifier: Your go-to app for tracking product prices across top e-commerce. Search by name, and get instant notifications when prices drop. Shop smart, save big!",
    "main": "app.js",
    "scripts": {
        "dev": "tsnd --respawn --clear src/app.ts",
        "build": "rimraf ./dist && tsc",
        "start": "npm run build && node dist/app.js",
        "prettier": "prettier --check ./src  --write ./src",
        "lint": "eslint ./src --fix ./src",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DanielFlores1223/CLI-Price-Notifier.git"
    },
    "keywords": [
        "nodejs",
        "typescript",
        "cli",
        "scrapping",
        "clean-architecture"
    ],
    "author": "Daniel Flores",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/DanielFlores1223/CLI-Price-Notifier/issues"
    },
    "homepage": "https://github.com/DanielFlores1223/CLI-Price-Notifier#readme",
    "devDependencies": {
        "@types/node": "^20.10.6",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "prettier": "^3.1.1",
        "rimraf": "^5.0.5",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3",
        "husky": "^8.0.0"
    },
    "dependencies": {
        "husky": "^8.0.3"
    }
}
